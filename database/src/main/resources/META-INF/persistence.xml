<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="de.ansaru.happymoments" transaction-type="RESOURCE_LOCAL">
        <class>de.ansaru.happymoments.database.daos.UserDao</class>
        <class>de.ansaru.happymoments.database.daos.MomentDao</class>
        <class>de.ansaru.happymoments.database.daos.MomentFileDao</class>
        <class>de.ansaru.happymoments.database.daos.OneTimePadDao</class>
        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.connection.driver_class" value="org.mariadb.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mariadb://localhost/happymoments"/>
            <property name="hibernate.connection.user" value="andre"/>
            <property name="hibernate.connection.password" value="loganzack"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>